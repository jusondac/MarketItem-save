<div class="container pt-5">
  <div class="card" style="width: 55rem;">
    <div class="card-body">
      <h5 class="card-title bg-primary text-white">Item Variant</h5>
      <%= link_to 'New Item Variant', new_item_variant_path, class:'btn btn-success' %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nama</th>
            <th colspan="3" class="text-center">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @item_variants.each do |item_variant| %>
            <tr>
              <td><%= item_variant.name %></td>
              <td><%= link_to 'Show', item_variant %></td>
              <td><%= link_to 'Edit', edit_item_variant_path(item_variant) %></td>
              <td><%= link_to 'Destroy', item_variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
