<div class="container pt-5">
  <div class="card" style="width: 55rem;">
    <div class="card-body">
      <h5 class="card-title bg-primary text-white">Tipe Barang</h5>
      <%= link_to 'New Item Type', new_item_type_path, class:'btn btn-success' %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nama</th>
            <th colspan="3" class="text-center">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @item_types.each do |item_type| %>
            <tr>
              <td><%= item_type.name %></td>
              <td><%= link_to 'Show', item_type %></td>
              <td><%= link_to 'Edit', edit_item_type_path(item_type) %></td>
              <td><%= link_to 'Destroy', item_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
