<div class="container mt-5">
  <div class="card" style="width: 50rem;">
    <div class="card-body">
      <h5 class="card-title bg-primary text-white">Detail Item</h5>
      <div class="row">
        <div class="col">Nama</div>
        <div class="col">: <%= @item.name %></div>
      </div>
      <div class="row">
        <div class="col">Pemilik</div>
        <div class="col">: <%= @item.user %></div>
      </div>
      <div class="row">
        <div class="col">Barang</div>
        <div class="col">: <%= @item.tipe_barang %></div>
      </div>
      <div class="row mt-5">
        <div class="col">
          <%= link_to 'Edit', edit_item_path(@item), class:'btn btn-success' %>
        </div>
        <div class="col">
          <%= link_to 'Back', items_path, class:'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
